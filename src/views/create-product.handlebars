<div class="container-fluid bg-secondary">
    <div class="row">
        <div class="col-md-12 mb-3 mt-3 justify-content-center align-items-center d-flex">
             <h2 class="justify-content-center">Create a product</h2>
        </div>
    </div>

    <form id="productsForm">
    <div class="row d-flex">
        <div class="col-md-3 mb-2">
            <label>Title:</label><br>
            <input name="title">
        </div>
        <div class="col-md-3 mb-2">
            <label>Price:</label><br>
            <input name="price">
        </div>
        <div class="col-md-3 mb-2">
            <label>Thumbnail:</label><br>
            <input name="thumbnail">
        </div>
        <div class="col-md-3 mb-2">
            <br>
            <input class="btn btn-light  p-1" type="submit">
        </div> 
    </div>
    </form>


    <hr />
    <div id="history" class="table table-striped table-dark">There is no data to show</div>
    <hr />


    <div class="row">
        <div class="col-md-12 mb-3 mt-3 justify-content-center align-items-center d-flex">
             <h2 class="justify-content-center">Messages history</h2>
        </div>
    </div>
    
  
    <form id="chatForm">
        <label>Email:</label><br>
        <input class="mb-3" name="email">
        <div class="bg-light mb-3" id="chatHistory">There is no message to show</div>
        <label>Message:</label><br>
        <input class="mb-3" name="message">
        <input class="mb-3" type="submit">
    </form>
    
</div>